<Window x:Class="PostProcessor.Windows.InstrumentsWindow"
	   xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	   xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	   Title="InstrumentsWindow" Width="500" SizeToContent="Height"
	   WindowStartupLocation="CenterScreen">

	<StackPanel Orientation="Vertical">
		<StackPanel Orientation="Horizontal" Margin="4" HorizontalAlignment="Right">
			<Button Margin="4" Padding="8" Width="120" FontSize="14" Content="Отмена" Click="CancelButton_Click" />
			<Button Margin="4" Padding="8" Width="120" FontSize="14" Content="Применить" Click="ApplyButton_Click" />
		</StackPanel>
	</StackPanel>
</Window>
