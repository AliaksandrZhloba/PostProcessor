<Window x:Class="PostProcessor.Windows.SendingErrorMessageWindow"
	   xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	   xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	   xmlns:UCs="clr-namespace:PostProcessor.UserControls"
	   Title="SendingErrorMessageWindow"
	   WindowStartupLocation="CenterScreen" SizeToContent="WidthAndHeight" WindowStyle="None">

     <Grid Margin="2">
          <Grid.RowDefinitions>
               <RowDefinition Height="Auto" />
               <RowDefinition Height="Auto" />
          </Grid.RowDefinitions>
          <StackPanel Grid.Row="0" Orientation="Horizontal">
               <Viewbox Grid.Row="1" Margin="6" Width="48" Height="48" >
                    <UCs:CircularProgressBar />
               </Viewbox>
               <TextBlock Margin="10,2,10,2" Grid.Row="0" Text="Отправка сообщения..." VerticalAlignment="Center" />
          </StackPanel>
     </Grid>
</Window>
